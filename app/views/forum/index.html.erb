<header class="forumHeader"><h1>Forum</h1></header>
<%=  form_tag "", :method => 'get' do %>
    <p>
      <%=  text_field_tag :search, params[:search] %>
      <%=  submit_tag "Search", :title => nil %>
    </p>
<% end %>
<% @posts.each do |post| %>
    <article class="<%= cycle('post_odd', 'post_even') %>">
      <h4><%= link_to post.title, post %></h4>
      <p><%= truncate(strip_tags(post.content), length: 200) %></p>
      <h4>Replies:</h4>
      <p><%= truncate(strip_tags(render post.replies), length: 200) %></p>
      <p><%= link_to 'Show', post %></p>
      <h6>Tags:</h6>
      <p><span class="tags"><%= join_tags(post) %></span></p>
    </article>
<% end %>
