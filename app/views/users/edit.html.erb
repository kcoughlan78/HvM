<% content_for :head do %>
    <title>Hurlers vs Monsters: Your Account</title>
    <%= stylesheet_link_tag "users", :media => "all" %>
<% end %>
<% content_for :article do %>
    <article id="upper_stage">
      <div id="upper_col1">
        <header><h2>Update Your Details</h2></header>
        <br>
        <p>Name: <%= @user.fname %> <%= @user.sname %></p>
        <br>
        <p>Username: <%= @user.username %></p>
        <br>
        <p>Email: <%= @user.email %></p>
        <br>
        <%= form_for @user do |f| %>
            <% if @user.errors.any? %>
                <div class="error_messages">
                  <h2>Form is invalid</h2>
                  <ul>
                    <% for message in @user.errors.full_messages %>
                        <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>
            <p>Bio:</p>
            <p><span id="textarea"><%= f.text_area :bio, cols: 50, rows: 7 %></span></p>
            <p class="button"><%= f.submit %></p>
            <% end %>
      </div>
      <div id="upper_col2">
        <p>List posts/comments/tweets</p>
        <% @user.posts %>
      </div>
    </article>
<% end %>
<% content_for :section do %>
    <section>
      <header><h2>Join in</h2></header>
      <div id="content">
        <figure id="content_left">
          <figcaption>
            <h4 class="homeh4"><%=link_to "Try the Game", game_path %>
            </h4>
            <div class="blog_desc">
              <p>Bored? Want to spend 5 minutes away from reality well click here</p>
            </div>
          </figcaption>
        </figure>
        <figure id="content_centre">
          <figcaption>
            <h4 class="homeh4"><%= link_to "Sports Blog", :controller => "forum", :action => "sports" %>
            </h4>
            <div class="blog_desc">
              <p>Have something to say on the world of sport? Then click here.</p>
              <p>Start a debate, have thoughts on the current national team selection, or discuss and or promote more local sports.</p>
            </div>
          </figcaption>
        </figure>
        <figure id="content_right">
          <figcaption>
            <h4 class="homeh4"><%= link_to "Tech Blog", :controller => "forum", :action => "tech" %>
            </h4>
            <div class="blog_desc">
              <p>Have something to say on the world of tech? Then click here.</p>
              <p>Start a debate whether its a comment on current events, your own opinion or you just want to join the general conversation</p>
            </div>
          </figcaption>
        </figure>
      </div>
    </section>
<% end %>