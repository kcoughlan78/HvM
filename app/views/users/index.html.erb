<% content_for :head do %>
    <title>Hurlers vs Monsters: Registration</title>
    <%= stylesheet_link_tag "home", :media => "all" %>
<% end %>
<% content_for :article do %>
    <article id="upper_stage">
      <div class="admin_view">
        <div id="admin_scroll">
<h1 class="head2">Listing users</h1>
<br>
<table>
  <tr>
    <th>Email</th>
    <th></th>
    <th></th>
    <th>Actions</th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
      </tr>
  <% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
            </div>
          </div>

</article>
<% end %>