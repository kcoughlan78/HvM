<% @post.tags.build %>
<%= form_for(@post) do |post_form| %>
    <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <br>
    <div>
      <p><span class="post_text">by: <%= current_user.email %></span> <span class="post_warning">if this isn't you follow <%= link_to "this link", logout_path %></span></p>
    </div>
    <br>
    <div class="field">
      <p><span class="post_text"><%= post_form.label :title %></span></p><br>
      <%= post_form.text_field :title %>
    </div>
    <br>
    <div class="field">
      <p><span class="post_text"><%= post_form.label :content %></span></p><br>
      <p class="content_box"><%= post_form.text_area :content %></p>
    </div>
    <div class="field">
      <p><span class="post_text"><%= post_form.label :image_url %></span></p><br />
      <%= post_form.text_field :image_url %>
    </div>
    <br>
    <%= render :partial => 'tags/form',
               :locals => {:form => post_form} %>

    <div class="actions">
    <%= post_form.submit %>
  </div>
<% end %>
