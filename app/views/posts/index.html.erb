<% content_for :head do %>
    <title>Hurlers vs Monsters: Posts</title>
    <%= stylesheet_link_tag "posts", :media => "all" %>
<% end %>
<% content_for :article do %>
    <article id="upper_stage">
      <div class="admin_view">
        <div id="admin_scroll">
<h2 class="head2">Hurlers vs Monsters Forum</h2>
<br>
  <table>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th>Views</th>
      <th>Actions</th>
      <th></th>
    </tr>

    <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td><%= post.image_url %></td>
          <td><%= post.view %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
        <tr>
         <!-- <td>_</td>
          <td>_</td>
          <td>_</td>
          <td>_</td>
          <td>_</td>
          <td>_</td>-->
        </tr>
    <% end %>
  </table>

  <br />
  <%= link_to 'New Post', new_post_path %>
        </div>
      </div>
</article>
<% end %>








