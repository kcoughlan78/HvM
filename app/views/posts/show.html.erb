<% content_for :head do %>
    <title xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">Hurlers vs Monsters: View Posts</title>
    <%= stylesheet_link_tag "posts", :media => "all" %>
<% end %>
<% content_for :article do %>
<article id="upper_stage">
    <div id="upper_col1">
      <div id="postscroll">
    <h2><span class="post_header">
    <%= @post.title %>
    </span></h2>
      <figcaption><p><span class="post_date"><%= @post.created_at.to_s(:short) %></span><span class="post_text">
    # tags:
        <%= join_tags(@post) %>
    </span></p></figcaption>
      <br>
      <p>
        <%= image_tag(@post.image_url, class: "post_img_url") %>
      </p>
    <p><span class="post_text">
    <%= @post.content %>
    </span></p>
      <div id="posted_by">

        <p>
        <span class="post_text">posted by:
          <%= @post.user.username %>
      </span>
          <%= image_tag(@post.user.image, class: "user_img_url") %></p>
        <br>
      <p>
        <span class="post_text">
          <%= @post.user.bio %>
      </span></p>
      </div>
    <br>
    <br>
    <br>
    <br>
    <h2><span class="post_header">Replies</span></h2>
    <br>
    <%= render @post.replies %>
      </div>
    </div>
    <div id="upper_col2">
    <% if logged_in? %>
    <span class="post_header"><h2>Add a comment:</h2></span>
    <br>
    <%= render "replies/form" %>
    <% else %>
    <p><span class="post_text"> Want to join in? Click <%= link_to 'here',login_path %> to login</span></p>
    <p><span class="post_text">Haven't an account? <%= link_to 'Sign-up', signup_path %></span></p>
    <% end %>
    </div>
    </article>
<% end %>
<br>
<% content_for :section do %>
    <section>
      <header><h2>Join in</h2></header>
      <div id="content">
        <figure id="content_left">
          <figcaption>
            <h4 class="homeh4"><%=link_to "Try the Game", game_path %>
            </h4>
            <div class="blog_desc">
              <p>Bored? Want to spend 5 minutes away from reality well click here</p>
            </div>
          </figcaption>
        </figure>
        <figure id="content_left_centre">
          <figcaption>
            <h4 class="homeh4"><%= link_to "SportTech", :controller => "forum", :action => "sports" %>
            </h4>
            <div class="blog_desc">
              <p>Have something to say on the world of sport? Then click here.</p>
              <p>Start a debate, have thoughts on the current national team selection, or discuss and or promote more local sports.</p>
            </div>
          </figcaption>
        </figure>
        <figure id="content_right_centre">
          <figcaption>
            <h4 class="homeh4"><%= link_to "Gaming", :controller => "forum", :action => "gaming" %>
            </h4>
            <div class="blog_desc">
              <p>Have something to say on the world of sport? Then click here.</p>
              <p>Start a debate, have thoughts on the current national team selection, or discuss and or promote more local sports.</p>
            </div>
          </figcaption>
        </figure>
        <figure id="content_right">
          <figcaption>
            <h4 class="homeh4"><%= link_to "Tech", :controller => "forum", :action => "tech" %>
            </h4>
            <div class="blog_desc">
              <p>Have something to say on the world of tech? Then click here.</p>
              <p>Start a debate whether its a comment on current events, your own opinion or you just want to join the general conversation</p>
            </div>
          </figcaption>
        </figure>
      </div>
    </section>
<% end %>