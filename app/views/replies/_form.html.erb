<%= form_for([@post, @post.replies.build]) do |f| %>
    <div class="field">
      <%= f.label :by %><br />
      <%= f.text_field :by %>
    </div>
    <div class="field">
      <%= f.label :response %><br />
      <%= f.text_area :response %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>